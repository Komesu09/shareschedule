.sidebar
  %ul.tab
    %li.slide#User-bar
      %button.sidebar-toggle#user{onfocus: "this.blur();"}
        %i.fas.fa-bars.icon#user-icon
      .contents
        .contents__box
          .user-name
            = current_user.name
          .edit-user
            = link_to edit_user_path(current_user), class: "menu__icons" do
              = icon('fas', "cog", class: 'edit')
          
    %li.slide#My-bar
      %button.sidebar-toggle#my{onfocus: "this.blur();"}
        %i.fas.fa-user-alt.icon#my-icon
      .contents
        - current_user.my_calendars.each do |my_calendar|
          .contents__box
            = link_to my_calendar_events_path(my_calendar) do
              .calendar-name
                = my_calendar.name
              .calendar-edit
                =link_to edit, class:"editlink" do
                  = icon('fas','pen',class:"edit-icon")
        .create-calendar
          = link_to new_my_calendar_path, class:"add-calendar" do
            + カレンダー作成
    %li.slide#Share-bar
      %button.sidebar-toggle#share{onfocus: "this.blur();"}
        %i.fas.fa-users.icon#share-icon
      .contents
        - current_user.shares.each do |share|
          .contents__box
            = link_to share_events_path(share) do
              .calendar-name
                = share.name
              .calendar-edit
                =link_to "#", class:"editlink" do
                  = icon('fas','pen',class:"edit-icon")
        .create-calendar
          = link_to new_share_path, class:"add-calendar" do
            + カレンダー作成

:javascript
  $("ul li").on("click",function(){
    $(this).toggleClass("is-closed");
  });